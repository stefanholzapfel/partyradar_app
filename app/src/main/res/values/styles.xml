<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:buttonStyle">@style/Button.PartyRadar</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/partyradar_grey</item>
    </style>

    <!-- ActionBar style -->
    <style name="ActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/partyradar_darkblue</item>
    </style>

    <!-- Main activity theme -->
    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.PartyRadar.NoTitle</item>
    </style>

    <!-- Main activity action bar style -->
    <style name="ActionBar.Solid.PartyRadar.NoTitle"
           parent="@style/ActionBar">
        <item name="displayOptions">useLogo|showHome</item>

        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="Button.PartyRadar" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@color/partyradar_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10sp</item>
    </style>

</resources>
